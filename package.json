{
	"name": "blocks-highlighter",
	"displayName": "blocks-highlighter",
	"description": "Higlights blocks",
	"publisher": "megabyte",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Blocks-highlighter",
			"properties": {
				"blockshighlighter.blocks": {
					"type": "array",
					"description": "List of block to highlight",
					"items": {
						"type": "object",
						"properties": {
							"fileType": {
								"type": "string",
								"description": "Regexp to filter files to apply blocks searching."
							},
							"begin": {
								"type": "string",
								"description": "Regexp to detect beginning of block."
							},
							"end": {
								"type": "string",
								"description": "Regexp to detect ending of block"
							},
							"decorationRenderOptions": {
								"type": "object",
								"description": "Block styling options in format described here: https://code.visualstudio.com/api/references/vscode-api#DecorationRenderOptions"
							}
						}
					},
					"default": [{
							"fileType": "\\.js$",
							"begin": "^\\s*///\\s*#if EDITOR\\s*$",
							"end": "^\\s*///\\s*#endif\\s*$",
							"decorationRenderOptions": {
								"isWholeLine": true,
								"backgroundColor": "rgba(0,100,255,0.08)"
							}
						},
						{
							"fileType": "\\.js$",
							"begin": "^\\s*///\\s*#if DEBUG\\s*$",
							"end": "^\\s*///\\s*#endif\\s*$",
							"decorationRenderOptions": {
								"isWholeLine": true,
								"backgroundColor": "rgba(0,255,100,0.08)"
							}
						}
					]
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}